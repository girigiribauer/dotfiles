# ---------------------------------------------------------------------------- #
# zshrc entrypoint
# ---------------------------------------------------------------------------- #

# 基本的な設定
source "$HOME/.zsh/basic.zsh"

# 履歴管理
source "$HOME/.zsh/history.zsh"

# 補完周り
source "$HOME/.zsh/completion.zsh"

# 表示、見た目の設定
source "$HOME/.zsh/appearance.zsh"

# キーマッピング
source "$HOME/.zsh/mappings.zsh"

# tmux（画面分割）
source "$HOME/.zsh/tmux.zsh"

